mixin textfield(textlabel,placeholder,defaultValue)
    form.form
        
        label.form__label(for="text")=textlabel
            p.form__default=defaultValue
        input.form__input(type="text" id="text" placeholder=placeholder) 
mixin dateDropdown(textlabel)
    div(class="form form__datedrop ")
        
        .form__wrapDate 
               
            input( type="text" id="daterange") 
            
            
            label(class="form__label_date form__label" for="rangeFrom")=textlabel
            div(class=" form__input form__date__wrap ")
                span(class="form__arrow_down form__arrow_date")
                input(class="form__date__wrap__input" type="text" id="rangeFrom" ) 

        .form__wrapDate
            label(class="form__label_date form__label" for="rangeFrom")=textlabel
            div(class=" form__input form__date__wrap ")  
                span(class="form__arrow_down form__arrow_date") 
                input(class="form__date__wrap__input" type="text" id="rangeTo") 
mixin filterDate(textlabel)
    .form     
        label(class="form__label" for="my-select")=textlabel
                
        input(class="form__input form__input_filterDate" id="range" value="") 
mixin dropDown(textlabel,defaultValue,...items) 
    
    form.form
        label(class="form__label" for="my-select")=textlabel
            p.form__default=defaultValue
        
        select(id="my-select")
            option(value=item)="Сколько гостей"
            each item in items
                option(value=item)=item
mixin masked(textlabel)
    form.form     
        label(class="form__label" for="my-select")=textlabel    
            
            p.form__default="Default"      
        input(class="form__input form__masked" placeholder="ДД.ММ.ГГГГ" value="")  
        
mixin subscriptionTextField(textlabel,placeholder)
    form.form
        
        label.form__label(for="text")=textlabel
        div(class=" form__input form__wrap__subsc ")    
            input(class="form__sub" type="text" id="text" placeholder=placeholder) 
            button(type="submit" value="" class="form__submitBtn")
                <i class="fas fa-arrow-right"></i>

