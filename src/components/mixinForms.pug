mixin rate(id,name)
    div(class="rate rate_mr")

        div(class="rating-group")
            label(aria-label="1 star" class="rating__label" for=`${id}1`)
                div(class="rating__icon rating__icon--star ")
            input(class="rating__input" name=name id=`${id}1` value="1" type="radio")
            
            label(aria-label="2 stars" class="rating__label" for=`${id}2`)
                div(class="rating__icon rating__icon--star ")
            input(class="rating__input" name=name id=`${id}2` value="2" type="radio")
            label(aria-label="3 stars" class="rating__label" for=`${id}3`)
                div(class="rating__icon rating__icon--star ")
            input(class="rating__input" name=name id=`${id}3` value="3" type="radio" checked)
            label(aria-label="4 stars" class="rating__label" for=`${id}4`)
                div(class="rating__icon rating__icon--star ")
            input(class="rating__input" name=name id=`${id}4` value="4" type="radio")
            label(aria-label="5 stars" class="rating__label" for=`${id}5`)
                div(class="rating__icon rating__icon--star ")
            input(class="rating__input" name=name id=`${id}5` value="5" type="radio")
